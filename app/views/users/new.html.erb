<div class="container">
  <% flash.each do |key, value| %>
    <div class="alert alert-<%= key %>">
      <%= value %>
    </div>
  <% end %>
  <h1 class="my-3 text-center"> Crée ton compte Gossip Project </h1>
  <%= form_tag url_for(action: 'create'), method: "post" do %>
    <div class="form-group mt-5">
      <%= label_tag 'Nom' %>
      <%= text_field_tag 'last_name', @user.last_name, {class: 'form-control'} %>
    </div>
    <div class="form-group">
      <%= label_tag 'Prénom' %>
      <%= text_field_tag 'first_name', @user.first_name, {class: 'form-control'} %>
    </div>
    <div class="form-group">
      <%= label_tag 'Email' %>
      <%= text_field_tag 'email', @user.email, {class: 'form-control'} %>
    </div>
    <div class="form-group">
      <%= label_tag 'Password' %>
      <%= text_field_tag 'password', @user.password, {class: 'form-control'} %>
    </div> 
    <div class="form-group">
      <%= label_tag 'City' %>
      <%= select_tag 'city_id', options_from_collection_for_select(City.all, :id, :name), {class: 'form-control', prompt: 'Choisir une ville'} %>
    </div> 

    <br />
    <%= submit_tag "Envoyer", {class:'btn btn-primary'}%>
  <% end %>
</div>
