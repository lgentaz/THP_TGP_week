<header>
<nav class="navbar navbar-expand-lg navbar-light bg-primary">
  <a class="navbar-brand">The Gossip Project</a>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>
  <div class="collapse navbar-collapse" id="navbarNav">
    <ul class="navbar-nav">
      <li class="nav-item">
        <%= link_to "Accueil", gossips_path, class: "nav-link"%>
      </li>
      <li class="nav-item">
        <%= link_to "L'équipe", class: "nav-link"%>
      </li>
      <li class="nav-item">
        <%= link_to "Contact", class: "nav-link"%>
      </li>
    </ul>
  </div>
</nav>
</header>

<div class="container">
  <div class="card my-5">
    <div class="card-header">
      Gossip n°<%= @gossip.id %>
    </div>
    <div class="card-body py-5">
      <div class="card-title text-center">
        <h2 class="font-weight-bold"><%= @gossip.title%>
        <small> by 
        <a href="/users/<%= @gossip.user.id %>" class="text-warning"><%= @gossip.user.first_name%> <%= @gossip.user.last_name%></a>
         <em class="small">(from <%= link_to @gossip.user.city.name, city_path(@gossip.user.city_id)%>)</em>
        </small></h2>
      </div> 
      <h4 class="card-text pt-5 px-2"><%= @gossip.content%></h4>    
    </div>
    <div class="card-footer text-muted text-right">
      publié le <%= @gossip.created_at.strftime("%d/%m/%Y") %>
    </div>
  </div>
  <div class="row justify-content my-5">
    <%= link_to "Modifier", edit_gossip_path, class:"btn btn-primary btn-lg ml-5"%>
    <%= link_to "Supprimer", gossip_path, class:"btn btn-danger btn-lg ml-5", data: { confirm: "Êtes-vous sûr de vouloir supprimer le potin?" }, method: :delete%>
  </div>
</div>

